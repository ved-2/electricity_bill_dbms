<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <h2>My Bills</h2>
    
    <div class="card mt-4">
        <div class="card-body">
            <% if (bills.length) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Bill Number</th>
                            <th>Issue Date</th>
                            <th>Due Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bills.forEach(bill => { %>
                            <tr>
                                <td><%= bill.billNumber %></td>
                                <td><%= bill.issueDate.toLocaleDateString() %></td>
                                <td><%= bill.dueDate.toLocaleDateString() %></td>
                                <td>â‚¹<%= bill.total %></td>
                                <td>
                                    <span class="badge bg-<%= bill.status === 'paid' ? 'success' : 'warning' %>">
                                        <%= bill.status %>
                                    </span>
                                </td>
                                <td>
                                    <a href="/customer/bills/<%= bill._id %>" class="btn btn-sm btn-info">View</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No bills found</p>
            <% } %>
        </div>
    </div>
</div> 