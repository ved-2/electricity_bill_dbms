<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h3>Bill Details</h3>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Bill Number:</strong> <%= bill.billNumber %>
                    </div>
                    <div class="col-md-6">
                        <strong>Status:</strong> 
                        <span class="badge bg-<%= bill.status === 'paid' ? 'success' : 
                            bill.status === 'overdue' ? 'danger' : 'warning' %>">
                            <%= bill.status %>
                        </span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Issue Date:</strong> <%= bill.issueDate.toLocaleDateString() %>
                    </div>
                    <div class="col-md-6">
                        <strong>Due Date:</strong> <%= bill.dueDate.toLocaleDateString() %>
                    </div>
                </div>
                <hr>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <h5>Amount Details</h5>
                        <table class="table">
                            <tr>
                                <td>Subtotal</td>
                                <td class="text-end">₹<%= bill.subtotal %></td>
                            </tr>
                            <tr>
                                <td>Tax</td>
                                <td class="text-end">₹<%= bill.tax %></td>
                            </tr>
                            <tr class="table-active">
                                <th>Total Amount</th>
                                <th class="text-end">₹<%= bill.total %></th>
                            </tr>
                        </table>
                    </div>
                </div>
                <% if (bill.notes) { %>
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <h5>Notes</h5>
                            <p><%= bill.notes %></p>
                        </div>
                    </div>
                <% } %>
                <div class="text-center">
                    <% if (bill.status !== 'paid') { %>
                        <a href="/customer/bills/<%= bill._id %>/pay" class="btn btn-success">Pay Now</a>
                    <% } %>
                    <a href="/customer/dashboard" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div> 