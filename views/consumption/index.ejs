<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Consumption Records</h2>
    <a href="/consumption/new" class="btn btn-primary">Add New Reading</a>
</div>

<div class="card">
    <div class="card-body">
        <% if (consumptions.length) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>Meter Number</th>
                        <th>Reading Date</th>
                        <th>Units Used</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% consumptions.forEach(consumption => { %>
                        <tr>
                            <td><%= consumption.meterId.meterNumber %></td>
                            <td><%= consumption.readingDate.toLocaleDateString() %></td>
                            <td><%= consumption.unitsUsed %></td>
                            <td>
                                <a href="/consumption/<%= consumption._id %>" class="btn btn-sm btn-info">View</a>
                                <a href="/consumption/<%= consumption._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No consumption records found</p>
        <% } %>
    </div>
</div>